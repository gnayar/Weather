<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:name="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/color_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/draw_image_here"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/temp_chooser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#00FFFFFF"
                android:text="70F"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="70sp" />

            <TextView
                android:id="@+id/precip_chooser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/temp_chooser"
                android:layout_centerHorizontal="true"
                android:background="#00FFFFFF"
                android:text="5%"
                android:textAllCaps="true"
                android:textColor="#33B5E5"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/how_many_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/temp_chooser"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="105dp"
                android:background="#00FFFFFF"
                android:text="Current"
                android:textColor="#CCCCCC"
                android:textSize="30sp"/>
			<TextView
                android:id="@+id/choosertime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/precip_chooser"
                android:layout_marginTop="55dp"           
                android:layout_centerHorizontal="true"
                android:background="#00FFFFFF"
                android:paddingTop="30dp"
                android:textColor="#CCCCCC"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/chooserdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/choosertime"
                android:layout_centerHorizontal="true"
                android:background="#00FFFFFF"
                android:textAllCaps="true"
                android:textColor="#CCCCFF"
                android:textSize="15sp" />

            

        </RelativeLayout>


            
        
    </LinearLayout>

</RelativeLayout>