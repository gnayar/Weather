<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="weather_settings"
        android:title="Weather Settings" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="temp_scale"
            android:summary="@string/temp_scale_description"
            android:title="Use Celsius" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="gps"
            android:summary="@string/gps_description"
            android:title="GPS Location" />

        <Preference
            android:key="weather_update"
            android:title="Refresh Weather" >
        </Preference>
        <Preference
            android:key="about"
            android:title="About" >
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>